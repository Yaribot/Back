{% extends 'layout.html.twig' %}


{% block title %}Boutique - Profil - Membre{% endblock %}

{% block content %}
<h1 class="display-4 text-center">Je suis dans le formulaire de connexion des membres</h1><hr><br>

<form class="p-5 col-12" method="post" action="{{ path('connexion_check') }}">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="exampleInputEmail1">Pseudo</label>
            <input type="text" class="form-control" name="_username" placeholder="Enter pseudo" value="{{ lastUserName }}">
        </div>
        <div class="form-group col-md-6">
            <label for="exampleInputEmail1">Password</label>
            <input type="password" class="form-control" name="_password" placeholder="Mot de passe">
        </div>
        <button type="submit" class="btn btn-dark col-md-4 offset-md-4">Connexion</button>
    </div>
</form>
{% endblock %}