{% extends 'layout.html.twig' %}


{% block title %}Boutique - Accueil{% endblock %}

{% block content %}

{# {{ dump(categories) }} #}


<div class="col-lg-12 p-5">

    <div class="row">   <!--  Menu des catégorie -->
        <div class="col-lg-3">
            <div class="list-group mb-4">
                <a href="" class="list-group-item text text-light bg-dark"><b>Tous les produits</b></a>
                {% for cat in categories %}
                    <a href="{{ path('categorie', {'cat' : cat.categorie}) }}" class="list-group-item text text-dark"><b>{{ cat.categorie }}</b></a>
                {% endfor %}
            </div>
        </div>


        <!-- Espace principal  -->
        <div class="col-lg-9">
            <div class="row">



                {% for pdt in produits %}
                <!-- Debut Vignette Produit -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="{{ path('produit', {'id': pdt.id } ) }}"><img class="card-img-top" src="{{ asset('photo/' ~ pdt.photo ) }}" alt=""></a>
                        <div class="card-body">
                        <h4 class="card-title text-center">
                            <a href="" class="alert-link text-dark">{{ pdt.titre }}</a>
                        </h4>
                        <h5 class="text-center">{{ pdt.prix }} €</h5>
                        <p class="card-text text-center">{{ pdt.description }}</p>
                        </div>
                        <div class="card-footer text-center">
                        <a href="" class="alert-link text-dark">Voir le détail&nbsp;&nbsp;<i class="fas fa-search"></i></a>
                        </div>
                    </div>
                </div>
                <!-- Fin Vignette Produit -->
                {% endfor %}



            </div>
        </div>
    </div>    
</div>	

{% endblock %}

    